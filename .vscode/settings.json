{
	"clangd.fallbackFlags": [
		"-I${workspaceFolder}",
		"-I${workspaceFolder}/source",
		"-std=c++23"
	],
	// 自己定制背景图
	// 
	// 例如:
	// 
	// `https://a.com/b.png`
	// 
	// `file:///a/b.jpg`
	// background 插件是否启用
	"background.enabled": true,
	"background.customImages": [
		"file:///C:/Users/xiaobbl/Pictures/observer.png"
	],
	// 全屏，会覆盖其它配置。
	"background.fullscreen": {
		"images": [],
		"opacity": 0.91,
		"size": "cover",
		"position": "center",
		"interval": 0
	},
	// 单位 `秒`，轮播时候图片切换间隔，默认 `0` 表示不开启。
	"background.interval": 0,
	// 自定义各项公有样式
	"background.style": {
		"background-position": "100% 70%",
		"background-size": "cover",
		"opacity": 0.1
	},
	// 是否使用前景图，这样会使图片放在代码的顶部
	"background.useFront": false,
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true
	},
	"C_Cpp.intelliSenseEngine": "disabled",
}